{% extends "./base.html.twig" %}

{% block title %}Edit Article | Edit selected article{% endblock %}

{% block body %}
    <div class="p-16 pt-10">

        <div class="bg-white p-16 shadow-xl">

            <h1 class="text-5xl font-bold text-center pb-8">
                Edit the article
            </h1>

            {{ form_start(article_form) }}

                {{ form_widget(article_form) }}
                <div class="flex justify-end">
                    <button    
                        type="submit"
                        class="w-3/12 uppercase border border-zinc-700 border-2 bg-white text-zinc-700 text-center py-4 px-8 text-lg font-medium transition duration-300 transition-all hover:bg-zinc-700 hover:text-white">
                            Save changes
                    </button>
                </div>
                
            {{ form_end(article_form) }}
        
        </div>

    </div>
    
{% endblock %}