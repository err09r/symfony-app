{% extends 'base.html.twig' %}

{% block title %}Log in | Articles.com{% endblock %}

{% block body %}
     <div class="p-16 pt-10 w-2/5 mx-auto">

        <div class="bg-white p-16 shadow-xl">

            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-4">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                        <h1 class="text-5xl font-bold text-center pb-12">
                            Login
                        </h1>
                
                        <input 
                            type="username" 
                            value="{{ last_username }}" 
                            name="username" 
                            id="inputUsername" 
                            class="w-full block mt-4 mb-8 p-4 border border-zinc-700 border-1 text-xl" 
                            placeholder="Username"
                            autocomplete="username" 
                            required 
                            autofocus>

                        <input 
                            type="password" 
                            name="password" 
                            id="inputPassword" 
                            class="w-full block mt-4 mb-8 p-4 border border-zinc-700 border-1 text-xl" 
                            autocomplete="current-password" 
                            placeholder="Password"
                            required>

                        <input 
                            type="hidden" 
                            name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}">

                        <button 
                            class="mt-16 w-full uppercase border border-zinc-700 border-2 bg-white text-zinc-700 text-center py-4 px-8 text-lg font-medium transition duration-300 transition-all hover:bg-zinc-700 hover:text-white" 
                            type="submit">
                                Sign in
                        </button>

            </form>

        </div>
    </div>
{% endblock %}